# Environment Configuration for Sell & Buy Marketplace
# Copy this file to .env and update with your actual values

# Application
APP_NAME="Sell & Buy Marketplace"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/sellandbuy

# Database
DB_HOST=localhost
DB_NAME=vente_groupe
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Security
SESSION_LIFETIME=7200
CSRF_TOKEN_EXPIRE=3600
PASSWORD_MIN_LENGTH=8

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=public/images/uploads

# Email (for notifications)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@sellandbuy.com
MAIL_FROM_NAME="Sell & Buy"

# API Keys (if needed)
GOOGLE_MAPS_API_KEY=
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
